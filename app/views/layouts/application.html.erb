<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    '/assets/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '/assets/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
          <%= image_tag "/assets/V.svg" %>
      <% end %>
    </div>

    <ul>
      <li class="category">Website</li>
      <li><%= link_to "Blog", root_path %></li>
      <li><%= link_to "About", about_path %></li>
    </ul>

    <ul>
      <li class="category">Social</li>
      <li><a href="https://twitter.com/mackenziechild">Fcebook</a></li
      <li><a href="http://instagram.com/mackenziechild">Instagram</a></li>
      <li><a href="https://github.com/mackenziechild">Github</a></li>
      <li><a href="mailto:hey@mackenziechild.me">Email</a></li>
    </ul>


      <% if !user_signed_in? %>
        <p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>
    <% end %>

  </div>

  <div id="main_content">
    <div id="header">
<div style="text-align:center;width:400px;padding:1em 0;"> <h2><a style="text-decoration:none;" href="http://www.zeitverschiebung.net/es/city/4023117"></a></h2> <iframe src="https://www.zeitverschiebung.net/clock-widget-iframe-v2?language=es&timezone=America%2FMexico_City" width="100%" height="150" frameborder="0" seamless></iframe> <small style="color:gray;">&copy; <a href="http://www.zeitverschiebung.net/es/" style="color: gray;">Diferencia horaria</a></small> </div>
      <% if current_page?(root_path) %>
          <p>All Posts</p>
      <% elsif current_page?(about_path) %>
          <p>About</p>
      <% else %>
          <%= link_to "Back to All Posts", root_path %>
      <% end %>

      <% if user_signed_in? %>
          <div class="buttons">
            <button class="button"><%= link_to "New Post", new_post_path %></button>
            <a href="<%= destroy_user_session_path %>" data-method='delete' >Salir</a>
          </div>
      <% end %>
    </div>

    <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
    <% end %>

    <%= yield %>


  </div>
<div id ="sidebara">
  <p>hola</p>
</div>
  </body>
</html>
